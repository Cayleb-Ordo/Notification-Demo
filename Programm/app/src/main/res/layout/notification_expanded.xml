<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="256dp">

    <TextView
        style="@style/TextAppearance.Compat.Notification"
        android:id="@+id/not_expan_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/NotCuExpTitle"
        android:padding="8dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@color/CustomTextColor"/>
    <ImageView
        android:id="@+id/not_expan_Img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tulpen_fentzl"
        android:contentDescription="@string/CustNotPicture" />

</LinearLayout>